# Flake8 Configuration - Lacrei Sa√∫de API
# ========================================

[flake8]
# Maximum line length
max-line-length = 127

# Maximum complexity (cyclomatic complexity)
max-complexity = 10

# Error codes to ignore
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E722: do not use bare except (sometimes needed)
    E722

# Directories to exclude from linting
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info,
    .venv,
    env,
    venv,
    node_modules,
    migrations,
    staticfiles,
    media,
    logs,
    .docker,
    docker

# File patterns to exclude
filename = 
    *.py

# Enable specific error/warning codes
select = 
    # Pyflakes errors
    F,
    # Pycodestyle errors  
    E,
    # Pycodestyle warnings
    W,
    # McCabe complexity
    C

# Per-file ignores
per-file-ignores =
    # Django settings can have long lines and imports
    */settings/*.py:E501,F401,F403
    */settings.py:E501,F401,F403
    # Django models can have long lines
    */models.py:E501
    # Migration files generated by Django
    */migrations/*.py:E501,F401,F403,F405
    # Test files can have long lines and unused imports
    test_*.py:E501,F401,F811
    *_test.py:E501,F401,F811
    tests/*.py:E501,F401,F811
    # Admin files can have long lines
    */admin.py:E501
    # __init__.py files can have unused imports
    __init__.py:F401,F403
    # Conftest files
    conftest.py:E501,F401,F811

# Enable checking of TODO/FIXME comments
enable-extensions = 
    # Enable TODO checker
    T

# Count errors and warnings
count = True

# Show source code for each error
show-source = True

# Show statistics at the end
statistics = True

# Benchmark mode (for performance)
benchmark = False

# Output format (default, pylint, or custom)
format = default

# Enable color output
color = auto